<% include ../partials/header %>
<h1 class="deep-orange-text" style="text-align: center">Edit Comment</h1>
    <div class="row d-flex justify-content-center deep-orange-text">
        <div class="col-md-6 col-sm-8 col-12 bg-white z-depth-2">
            <form class="md-form" action="/campgrounds/<%= campground_id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <i class="fa fa-pencil prefix"></i>
                    <textarea type="text" id="textareaPrefix" class="form-control md-textarea" name="comment[text]" rows="1"><%=comment.text %></textarea>
                    <label for="textareaPrefix">Icon Prefix</label>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-outline-deep-orange">Submit!</button>
                </div>
            </form>
            <a class="deep-orange-text" href="/campgrounds">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>