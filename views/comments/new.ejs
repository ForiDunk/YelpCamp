<% include ../partials/header %>
<h1 class="deep-orange-text" style="text-align: center">Add New Comment to <%= campground.name %></h1>
    <div class="row d-flex justify-content-center">
        <div class="col-md-4 col-sm-6 col-8 bg-white z-depth-2">
            <form class="md-form" action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <i class="fa fa-pencil prefix"></i>
                    <textarea type="text" id="textareaPrefix" class="form-control md-textarea" name="comment[text]" rows="1"></textarea>
                    <label for="textareaPrefix">Icon Prefix</label>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-outline-deep-orange">Add Comment</button>
                </div>
            </form>
            <a class="deep-orange-text" href="/campgrounds">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>